<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:contentPaddingBottom="20dp"
    app:contentPaddingLeft="32dp"
    app:contentPaddingRight="32dp"
    android:background="?selectableItemBackgroundBorderless"
    app:contentPaddingTop="20dp"
    app:cardUseCompatPadding="true"
    android:layout_marginEnd="8dp"
    tools:layout_marginEnd="8dp"
    tools:layout_marginStart="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/discipline_text_view_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="CÃ¡lculo I" />

        <TextView
            android:id="@+id/discipline_text_view_exam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="10"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discipline_text_view_title" />

        <TextView
            android:id="@+id/discipline_text_view_exam_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/discipline_exam_title"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/discipline_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discipline_text_view_exam" />

        <TextView
            android:id="@+id/discipline_text_view_exam_grade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/discipline_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discipline_text_view_exam_title"
            tools:text="9.0" />

        <View
            android:id="@+id/discipline_guideline"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/discipline_text_view_exam" />

        <TextView
            android:id="@+id/discipline_text_view_aps_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:text="@string/discipline_aps_title"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/discipline_guideline"
            app:layout_constraintTop_toBottomOf="@id/discipline_text_view_exam" />

        <TextView
            android:id="@+id/discipline_text_view_aps_grade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/discipline_guideline"
            app:layout_constraintTop_toBottomOf="@id/discipline_text_view_aps_title"
            tools:text="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>